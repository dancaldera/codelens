{
	"name": "codelens",
	"version": "1.0.0",
	"description": "AI-powered code analysis from screenshots - CodeLens visual code analyzer",
	"main": "dist/src/main.js",
	"scripts": {
		"build": "tsc",
		"start": "npm run build && electron .",
		"typescript-check": "tsc --noEmit",
		"dev": "bun run dev-runner.ts",
		"watch": "tsc -w",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"check": "biome check --write",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"electron-dev": "bun run dev-watcher.ts",
		"package": "bun run build && electron-builder build --mac",
		"package-win": "bun run build && electron-builder build --win",
		"package-linux": "bun run build && electron-builder build --linux",
		"package-all": "bun run build && electron-builder build -mwl"
	},
	"dependencies": {
		"dotenv": "^17.2.3",
		"openai": "^6.15.0",
		"winston": "^3.19.0"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.11",
		"@types/bun": "^1.3.5",
		"@types/glob": "^9.0.0",
		"@types/json-schema": "^7.0.15",
		"@types/node": "^25.0.3",
		"electron": "^39.2.7",
		"electron-builder": "^26.0.12",
		"typescript": "^5.9.3"
	},
	"build": {
		"appId": "com.dancaldera.codelens",
		"productName": "CodeLens",
		"files": [
			"dist/**/*",
			"index.html",
			"package.json",
			"styles/**/*"
		],
		"directories": {
			"output": "release/"
		},
		"asar": true,
		"compression": "maximum",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg"
			],
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"hardenedRuntime": true,
			"gatekeeperAssess": false
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		}
	},
	"author": "Daniel Caldera"
}
