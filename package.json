{
  "name": "electron-overlay-example",
  "version": "1.0.0",
  "description": "Electron overlay window example",
  "main": "dist/src/main.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "typescript-check": "tsc --noEmit",
    "dev": "concurrently \"npm run watch\" \"npm run electron-dev\"",
    "watch": "tsc -w",
    "electron-dev": "nodemon --watch dist --exec \"electron .\""
  },
  "dependencies": {
    "electron": "^36.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "typescript": "^5.8.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}