{
	"name": "codelens",
	"version": "1.0.0",
	"description": "AI-powered code analysis from screenshots - CodeLens visual code analyzer",
	"main": "dist/src/main.js",
	"scripts": {
		"build": "tsc",
		"start": "npm run build && electron .",
		"typescript-check": "tsc --noEmit",
		"dev": "concurrently \"npm run watch\" \"npm run electron-dev\"",
		"watch": "tsc -w",
		"format": "biome format --write",
		"lint": "biome lint --write",
		"check": "biome check --write",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"electron-dev": "nodemon --watch dist --watch index.html --watch styles --exec \"electron .\"",
		"package": "npm run build && electron-builder build --mac",
		"package-win": "npm run build && electron-builder build --win",
		"package-linux": "npm run build && electron-builder build --linux",
		"package-all": "npm run build && electron-builder build -mwl"
	},
	"dependencies": {
		"dotenv": "^16.4.5",
		"openai": "^6.1.0",
		"winston": "^3.17.0",
		"zod": "^3.24.4"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.4",
		"@types/bun": "^1.2.20",
		"@types/glob": "^9.0.0",
		"@types/json-schema": "^7.0.15",
		"@types/node": "^22.15.3",
		"concurrently": "^8.2.2",
		"electron": "^36.1.0",
		"electron-builder": "^26.0.12",
		"nodemon": "^3.0.3",
		"typescript": "^5.8.3"
	},
	"build": {
		"appId": "com.dancaldera.codelens",
		"productName": "CodeLens",
		"files": [
			"dist/**/*",
			"index.html",
			"package.json",
			"styles/**/*"
		],
		"directories": {
			"output": "release/"
		},
		"asar": true,
		"compression": "maximum",
		"mac": {
			"category": "public.app-category.developer-tools",
			"target": [
				"dmg"
			],
			"entitlements": "entitlements.mac.plist",
			"entitlementsInherit": "entitlements.mac.plist",
			"hardenedRuntime": true,
			"gatekeeperAssess": false
		},
		"win": {
			"target": [
				"nsis"
			]
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Development"
		}
	},
	"author": "Daniel Caldera"
}
